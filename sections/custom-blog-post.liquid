{% comment %}
  This is a combined Liquid template and schema file for the Custom Blog Post section with multiple posts.
{% endcomment %}

<div class="custom-blog-post-section">
  {%- if section.settings.divider -%}<div class="section--divider">{%- endif -%}

  <div class="page-width">
    {%- if section.settings.title != blank -%}
      <header class="section-header">
        <h2 class="section-header__title">
          {{ section.settings.title | escape }}
        </h2>
      </header>
    {%- endif -%}

    <div class="custom-content">
      {%- for block in section.blocks -%}
        <div class="custom-post">
          {%- if block.settings.custom_text != blank -%}
            <p>{{ block.settings.custom_text }}</p>
          {%- endif -%}

          {%- if block.settings.custom_image != blank -%}
            <img src="{{ block.settings.custom_image | img_url: 'master' }}" alt="{{ section.settings.title }}">
          {%- endif -%}

          {%- if block.settings.custom_link != blank -%}
            <a href="{{ block.settings.custom_link }}" class="custom-link">{{ block.settings.custom_link_text }}</a>
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>
  </div>

  {%- if section.settings.divider -%}</div>{%- endif -%}
</div>

{% schema %}
{
  "name": "Custom Blog Post",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Custom Blog Post"
    },
    {
      "type": "checkbox",
      "id": "divider",
      "label": "Show Divider",
      "default": false
    }
  ],
  "blocks": [
    {
      "type": "custom_post",
      "name": "Custom Post",
      "settings": [
        {
          "type": "textarea",
          "id": "custom_text",
          "label": "Custom Text",
          "default": "This is some custom text."
        },
        {
          "type": "image_picker",
          "id": "custom_image",
          "label": "Custom Image"
        },
        {
          "type": "url",
          "id": "custom_link",
          "label": "Custom Link"
        },
        {
          "type": "text",
          "id": "custom_link_text",
          "label": "Custom Link Text",
          "default": "Read More"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Blog Post",
      "category": "Custom",
      "settings": {
        "title": "Custom Blog Post",
        "divider": false
      }
    }
  ]
}
{% endschema %}
